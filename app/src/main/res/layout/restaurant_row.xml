<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Restaurant name"
        android:id="@+id/tv_restaurantName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Restaurant description"
        android:id="@+id/tv_restaurantDescription"
        android:layout_below="@+id/tv_restaurantName"
        android:layout_alignLeft="@+id/tv_restaurantName"
        android:layout_alignStart="@+id/tv_restaurantName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Distance"
        android:id="@+id/tv_restaurantDistance"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignBottom="@+id/tv_restaurantDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/separator_settings"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_restaurantDistance"
        android:layout_marginTop="16dp"
        android:background="#CCCCCC" />


</RelativeLayout>